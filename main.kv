#:kivy 1.8.0
Screen_Manager:
	PresplashWin:
	AccelerometerWin:
	
<PresplashWin>:	
	
	name: "presplash"
	
    BoxLayout:
		size_hint: 1, 1
        orientation: 'vertical'
		canvas:
            Color:
                rgb: 17/255, 74/255, 88/255
            Rectangle:
                size: self.size
                pos: self.pos	
		BoxLayout:
			size_hint: 1, None
			height: dp(150)
	        orientation: 'vertical'
	        padding: 20
	        
			Label: 
				size_hint: 1, .1
				text: "Alert Accident App"
				font_size: "30sp"
	
			Label: 
				size_hint: 1, .1
				text: "Using Python & Kivy Framework"
				font_size: "25sp"
	
		BoxLayout:
			size_hint: 1, None
			height: dp(70)
	        orientation: 'vertical'
			Label:	
				size_hint: 1, None
				height: dp(50)
				text: "EMERGENCY INFORMATIONS"
				font_size: "20sp"
			
		BoxLayout:
			size_hint: 1, None
			height: dp(300)
	        orientation: 'vertical'
	        padding: 20,0,20,40
	        spacing: 10

			BoxLayout:
	        	orientation: 'vertical'
				size_hint: 1, 0.9
				padding: 40,20,40,20
				Label: 
					size_hint: 1, None
					height: dp(80)
					text: "Phone Number :"
					font_size: "20sp"
				TextInput:
					id: phone 
					text: "example : +212611223344"
					size_hint_y: None
					height: dp(40)
					multiline: False
					write_tab: False
					cursor_color: 0, 0, 0, 1
					cursor_width: "2dp"
					foreground_color: 120/255, 120/255, 120/255, 1
					font_size: "25dp"
					on_touch_down: self.text = ''
						
			BoxLayout:
			
	        	orientation: 'vertical'
				size_hint: 1, 0.3				
				padding: 50,0,50,0
			    Button:
			    	text: 'Submit'
			        size_hint_y: .4
			        on_release: root.manager.current = "accelerometer"
			BoxLayout:
			
	        	orientation: 'vertical'
				size_hint: 1, None
				height: dp(50)				

		
		
		BoxLayout:
			size_hint: 1, 0.2
	        orientation: 'vertical'
	        padding: 20
	        
			Label: 
				size_hint: 1, None
				height: dp(30)
				text: "MOHAMMED V UNIVERSITY - ENSAM RABAT"
			Label: 
				size_hint: 1, None
				text: "ELECTRICAL ENGINEERING DEPARTMENT"
				height: dp(30)
			Label: 
				size_hint: 1, None
				text: "2FI-EEIN CLASS"
				height: dp(30)
				
<AccelerometerWin>:
	name: "accelerometer"
	gps_data: app.gps_location
	
    BoxLayout:
		size_hint: 1, 1
        orientation: 'vertical'
		canvas:
            Color:
                rgb: 17/255, 74/255, 88/255
            Rectangle:
                size: self.size
                pos: self.pos	
        BoxLayout:
        	orientation: 'vertical'
        	size_hint: 1, 0.3
        	padding: 10
        	
	        Label:
	            id: z_label
	            text: 'Z axis : '
	            color: 91/255, 198/255, 251/255
	        Label:
	            id: y_label
	            text: 'Y axis : '
	            color: 68/255, 248/255, 98/255
	        Label:
	            id: x_label
	            text: 'X axis : '
	            color: 237/255, 248/255, 68/255
	            
		BoxLayout:		
			id: graph_plot
			orientation: 'vertical'
			size_hint_y: 0.0001
			padding: 5
		
        Label:
            size_hint_y: None
            height: dp(30)
            id: accel_status
            text: ''

        BoxLayout:
            size_hint_y: None
            height: dp(80)
            padding: '10dp'
            spacing: '5dp'

            ToggleButton:
                id: toggle_button
                text: 'Start Accelerometer'
                on_press: root.do_toggle()
                disabled: True if (graph_button.state == 'down') else False
                #on_state:
                #	app.start(1000, 0) if self.state == 'down' else \
                #	app.stop()
                
			ToggleButton:
                id: graph_button
                text: 'Show Graph'
                on_press: root.show_graph()
                disabled: True if (toggle_button.state == 'normal') else False
                
                
<PopupWin>:
    size_hint: .9, None
    height: dp(180)
    title: "Crash detected !"

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 40

        Label:
            size_hint_y: None
            height: dp(40)
        	text: 'Accident Alert has been sent ...'
        	
        Button:
            text: 'Dismiss'
            size_hint_y: None
            height: dp(40)
            on_press: root.dismiss()